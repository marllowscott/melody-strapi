{
  "kind": "singleType",
  "collectionName": "homepages",
  "info": {
    "singularName": "homepage",
    "pluralName": "homepages",
    "displayName": "Homepage"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {
    "i18n": {
      "localized": false
    }
  },
  "attributes": {
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "navbar": {
      "type": "component",
      "component": "general.navlink",
      "repeatable": true
    },
    "heroTitle": {
      "type": "string",
      "required": true
    },
    "heroSubtitle": {
      "type": "text"
    },
    "heroButtons": {
      "type": "component",
      "component": "general.button",
      "repeatable": true
    },
    "heroBackgroundType": {
      "type": "enumeration",
      "enum": [
        "image",
        "local",
        "color"
      ],
      "default": "local"
    },
    "heroBackgroundColor": {
      "type": "string",
      "regex": "^#[0-9A-Fa-f]{6}$",
      "required": false
    },
    "heroOverlayColor": {
      "type": "string",
      "default": "#060621",
      "required": false
    },
    "heroOverlayOpacity": {
      "type": "decimal",
      "min": 0,
      "max": 1,
      "default": 0.7,
      "required": false
    },
    "heroLocalImage": {
      "type": "string",
      "required": false
    },
    "heroImages": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images"
      ]
    },
    "contentSections": {
      "type": "dynamiczone",
      "components": [
        "sections.text-card",
        "sections.number",
        "sections.text-image",
        "sections.about-section",
        "sections.service",
        "sections.testimonial"
      ]
    }
  }
}
